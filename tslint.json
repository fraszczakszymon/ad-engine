{
	"rulesDirectory": ["maintenance/tslint-rules/dist"],
	"extends": [
		"tslint:latest",
		"tslint-config-airbnb",
		"tslint-eslint-rules",
		"tslint-config-prettier"
	],
	"rules": {
		"no-sole-types": true,
		"no-unused-variable": true,
		"max-line-length": [true, { "limit": 100, "ignore-pattern": "^import |^export {(.*?)} |http" }],
		"ordered-imports": [
			true,
			{
				"named-imports-order": "case-insensitive",
				"import-sources-order": "case-insensitive"
			}
		],
		"member-ordering": [
			true,
			{
				"order": [
					"static-field",
					"static-method",
					"instance-field",
					"constructor",
					"instance-method"
				]
			}
		],
		"indent": [true, "tabs", 2],
		"arrow-return-shorthand": true,
		"callable-types": true,
		"class-name": true,
		"deprecation": {
			"severity": "off"
		},
		"member-access": [true, "no-public"],
		"no-arg": true,
		"no-console": [true, "log", "debug", "info", "time", "timeEnd", "trace"],
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-super": true,
		"no-empty": false,
		"no-empty-interface": true,
		"no-eval": true,
		"no-inferrable-types": [true, "ignore-params"],
		"no-misused-new": true,
		"no-non-null-assertion": true,
		"no-string-literal": false,
		"no-string-throw": true,
		"no-switch-case-fall-through": true,
		"no-unused-expression": true,
		"no-boolean-literal-compare": false,
		"object-literal-sort-keys": false,
		"prefer-const": true,
		"radix": true,
		"triple-equals": [true, "allow-null-check"],
		"unified-signatures": true,
		"variable-name": false,
		"no-implicit-dependencies": [true, ["@wikia/ad-engine", "@wikia/types"]],
		"interface-name": [true, "never-prefix"],
		"import-name": false,
		"no-increment-decrement": false,
		"no-object-literal-type-assertion": false,
		"increment-decrement": [true, "allow-post"],
		"array-type": [true, "array"],
		"space-before-function-paren": [
			true,
			{ "anonymous": "always", "named": "never", "asyncArrow": "always" }
		],
		"only-arrow-functions": {
			"severity": "warning",
			"options": ["allow-declarations", "allow-named-functions"]
		},
		"typedef": {
			"severity": "warning",
			"options": ["call-signature"]
		},
		"no-shadowed-variable": {
			"severity": "warning"
		},
		"no-bitwise": {
			"severity": "warning"
		},
		"no-unnecessary-initializer": {
			"severity": "warning"
		},
		"no-parameter-reassignment": {
			"severity": "warning"
		},
		"object-shorthand-properties-first": {
			"severity": "warning"
		},
		"prefer-conditional-expression": {
			"severity": "warning"
		},
		"no-use-before-declare": {
			"severity": "warning"
		},
		"no-this-assignment": {
			"severity": "warning"
		},
		"max-classes-per-file": {
			"severity": "warning"
		},
		"no-default-export": {
			"severity": "warning"
		}
	},
	"exclude": ["dist/", "lib/", "node_modules/", "jspm_packages/"]
}
