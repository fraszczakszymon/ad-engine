{
	"extends": ["tslint:latest", "tslint-microsoft-contrib", "tslint-config-prettier"],
	"rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
	"rules": {
		"no-unused-variable": true,
		"max-line-length": [true, { "limit": 100, "ignore-pattern": "^import |^export {(.*?)}" }],
		"ordered-imports": [
			true,
			{
				"named-imports-order": "case-insensitive",
				"import-sources-order": "case-insensitive"
			}
		],
		"member-ordering": [
			true,
			{
				"order": [
					"static-field",
					"instance-field",
					"constructor",
					"static-method",
					"instance-method"
				]
			}
		],
		"indent": [true, "tabs", 2]
	},
	"exclude": [
		"examples/**/dist/bundle.js",
		"dist/",
		"lib/",
		"node_modules/",
		"jspm_packages/",
		"tests/allure-results",
		"config.js",
		"karma.conf.js"
	]
}
